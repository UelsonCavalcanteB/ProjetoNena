procedure TfmCadProduto.DBEdit8Exit(Sender: TObject);
var
  Mkt : Real;
begin
  inherited;
 { dm.qPes.Close;
  dm.qPes.SQL.Clear;
  dm.qPes.SQL.Add('select markut from grupo where ID = ' + QuotedStr(DBLookupComboBox1.Text));
  DM.qPes.Open;
  mkt := dm.qPes.FieldByName('markut').Value;
  DBEdit9.Text :=  }

end;

